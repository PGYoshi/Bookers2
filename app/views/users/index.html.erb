<div class="body">

<div class="container">
	<div class="row">
		<div class="col-lg-3">
<%= render 'users/list', user: @user %>
<%= render 'books/new_book', book: @book %>
		</div>


<div class="col-lg-9">
<h2>Users</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>

	</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td>
					<%= attachment_image_tag user, :image, :fill, 50, 50, format: 'jpeg' %>

				</td>
				<td><%= user.name %></td>
				<td><%= link_to "show", user_path(user), class:"user_#{user.id}" %></td>
			</tr>
			<% end %>
		</tbody>
</table>
</div>
</div>
</div>
</div>

