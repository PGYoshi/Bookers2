<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<div class="body">

<div class="container">
	<div class="row">
		<div class="col-lg-3" style= "font-size: 30px;">
		<%= render 'users/list', user: @user %>
		<%= render 'books/new_book', book: @book %>
		</div>


		<div class="col-lg-9">
			<h2>Books</h2>
		<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>

	</thead>
		<tbody>
			<% @user.books.each do |book| %>
			<tr>
				<td>

 				<%= attachment_image_tag book.user, :image, :fill, 50, 50, fallback: 'no-image.jpg', :size => '50x50' %>


				</td>


				<td><%= link_to book.title, book_path(book.id), class:"book_#{book.id}" %></td>
				<td><%= book.opinion %></td>
			</tr>
			<% end %>
		</tbody>
		</table>
		</div>
	</div>
</div>
</div>





